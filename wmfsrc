    [key] mod = { "Mod4" }            key = "Left"                 func = "client_prev"                                               [/key]
    [key] mod = { "Mod4", "Alt" }     key = "Right"                func = "screen_next"                                               [/key]
    [key] mod = { "Mod4", "Alt" }     key = "Left"                 func = "screen_prev"                                               [/key]
